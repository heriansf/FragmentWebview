<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:fillViewport="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:padding="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView2"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/iconschoolofibnuhajar"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="SCHOOL OF IBNU HAJAR"
            android:id="@+id/textView2"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/txtview1"
            android:textSize="15dp"
            android:text="Lembaga berpendidikan tinggi dan tangguh sesuai dengan pengajaran islam pemahaman salafus sholeh yang di jadikan sebagai keutamaan dan kesempurnaan cara hidup dalam beragama"
            android:gravity="center"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:padding="10dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="214dp"
                android:layout_height="255dp"
                android:id="@+id/imageView5"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/iconydici"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.18" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="YAYASAN DAKWAH ISLAM CAHAYA ILMU"
                android:id="@+id/textView6"
                android:textSize="25dp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView7"
                android:textSize="15dp"
                android:gravity="center"
                android:padding="10dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Yayasan nirlaba yang bergerak dibidang sosial, keagamaan dan pendidikan islam sesuai dengan pengajaran islam pemahaman salafus sholeh " />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:padding="10dp"
                android:layout_gravity="center_horizontal" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="264dp"
                    android:id="@+id/imageView6"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/iconsohib"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="SOHIB RADIO"
                    android:id="@+id/textView8"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/textView9"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Radio streaming sahabat edukasi muslim sesuai dengan pengajaran islam pemahaman salafus sholeh " />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>